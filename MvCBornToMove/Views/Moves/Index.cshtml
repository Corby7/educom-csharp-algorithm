@model IEnumerable<MvCBornToMove.Models.MoveAverageRating>

@{
    ViewData["Title"] = "Exercise List";
}

<h1>List of Exercices</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Move.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Move.SweatRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageRating)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Move.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Move.SweatRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Move.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Move.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Move.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">+ Add New Exercise</a>
</p>
